{
  "name": "abyss_rl",
  "version": "0.0.1",
  "description": "Ultima 5 inspired roguelike game.",
  "main": "src/index.html",
  "scripts": {
    "start": "npm-run-all --parallel start:server build:dev",
    "start:server": "nodemon ./server/index.js",
    "start:server:prod": "node ./server/index.js",
    "clean": "rm -rf dist",
    "build:prod": "rm -rf dist && webpack --config webpack.config.js  --env mode=production",
    "build:dev": "npm run clean && npm run build:dev:clean",
    "build:dev:clean": "cross-env DUNGEON_JSON_PATH=$DUNGEON_JSON_PATH PLAYER_JSON_PATH=$PLAYER_JSON_PATH RNG_SEED=$RNG_SEED webpack --watch --config webpack.config.js  --env mode=development",
    "lint": "eslint src/scripts/**/*.ts",
    "lint:fix": "eslint src/scripts/**/*ts --fix",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "cypress:chrome": "cypress run --browser chrome --headless",
    "cypress:edge": "cypress run --browser edge --headless",
    "cypress:open": "cypress open"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint:ts"
    }
  },
  "author": "≈Åukasz Lach",
  "license": "ISC",
  "dependencies": {
    "autobind-decorator": "^2.4.0",
    "circular-dependency-plugin": "^5.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^5.2.6",
    "express": "^4.17.2",
    "file-loader": "6.2.0",
    "html-webpack-plugin": "^5.3.1",
    "jest-environment-jsdom": "^27.5.1",
    "jsonpack": "^1.1.5",
    "less": "^4.1.1",
    "less-loader": "^9.0.0",
    "mini-css-extract-plugin": "^1.6.0",
    "mobx": "^6.3.10",
    "rot-js": "^2.1.5",
    "source-map-loader": "^3.0.0",
    "style-loader": "^2.0.0",
    "ts-loader": "9.4.1",
    "typescript": "4.9.3",
    "uuid": "^8.3.2",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/jsdom": "12.2.2",
    "@types/jsonpack": "^1.1.1",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "cross-env": "^7.0.3",
    "cypress": "^10.9.0",
    "eslint": "^7.18.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "1.3.1",
    "jest": "27.5.1",
    "jest-cli": "27.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.1",
    "ts-jest": "27.1.3"
  }
}

{
  "name": "abyss_rl",
  "version": "0.0.1",
  "description": "Ultima 5 inspired roguelike game.",
  "main": "src/index.html",
  "scripts": {
    "start": "npm run build:dev",
    "build:prod": "rm -rf dist && webpack --config webpack.config.js  --env mode=production",
    "build:dev": "rm -rf dist && webpack --watch --config webpack.config.js  --env mode=development",
    "lint:ts": "eslint src/scripts/**/*.ts",
    "lint:fix": "eslint src/scripts/**/*ts --fix",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:ts",
      "pre-push": "npm run lint:ts && npm test"
    }
  },
  "author": "≈Åukasz Lach",
  "license": "ISC",
  "dependencies": {
    "autobind-decorator": "^2.4.0",
    "circular-dependency-plugin": "^5.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^5.2.6",
    "express": "^4.17.2",
    "file-loader": "^4.0.0",
    "html-webpack-plugin": "^5.3.1",
    "less": "^4.1.1",
    "less-loader": "^9.0.0",
    "mini-css-extract-plugin": "^1.6.0",
    "mobx": "^6.3.10",
    "rot-js": "^2.1.5",
    "source-map-loader": "^3.0.0",
    "style-loader": "^2.0.0",
    "ts-loader": "9.2.1",
    "typescript": "4.3.2",
    "webpack": "^5.17.0",
    "webpack-cli": "^4.4.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.9",
    "@types/jsdom": "12.2.2",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "eslint": "^7.18.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "1.3.1",
    "jest": "24.1.0",
    "jest-cli": "^24.8.0",
    "prettier": "^2.3.1",
    "ts-jest": "24.0.0"
  }
}
